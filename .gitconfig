###############################################
# GIT global config file
# 
# lots of stuff found at 
#    https://wincent.com/wiki/Git_quickstart
###############################################
[user]
	email = tak@project68.com
	name = Tak
[core]
	excludesfile = /Users/tak/.gitignore_global
	legacyheaders = false
	usedeltabaseoffset = true
[log]
	decorate = short
[color]
	ui = auto
	interactive = auto
[page]
	status = true
	show-branch = true
[alias]
	st = status
	stat = status -s
	ci = commit
	co = checkout
	staged = diff --cached
	oneline = log --oneline
	amend = commit --amend
	branches = branch -av
	unstage = reset HEAD --
	last = log -1 HEAD
	dirty = branch --no-merged
    relnotes = shortlog --no-merges v1.0.9...HEAD
    history = log --follow
[merge]
	tool = opendiff
