##
## Mac Growl alert
## As seen on http://damonparker.org/blog/2006/11/13/iterm-and-growl/
##
growl() {
    echo -e $'\e]9;'${1}'\007';
    return ;
}


pskill(){
    local pid
    #pid=$(ps -ax | grep $1 | grep -v grep | gawk '{ print $1 }')
    pid=$(ps -ax | grep $1 | grep -v grep | awk '{ print $1 }')
    echo -n "killing $1 (process $pid)..."
    kill -9 $pid
    echo "slaughtered."
}
